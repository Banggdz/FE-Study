            transition: color 0.5s ease;
        }
        /* Nut chuyen doi dang switch  */
        .toggle-switch{
            position: relative;
            width: 80px;
            height:40px;
        }
        .toggle-switch input{
            opacity: 0;
            width: 0;
            height: 0;
        }
        .slider{
            position: absolute;
            cursor: pointer;
            top:0;left:0;right:0;bottom:0;
            background-color: #ccc;
            transition: 0.4s;
            border-radius: 34px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .slider::before{
            content:"ðŸŒž";
            position: absolute;
